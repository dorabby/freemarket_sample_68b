.main-content
  .navivar
    %ul
      %li
        =link_to "FURIMA", root_path
      %li >
      %li
        =link_to "マイページ",user_path(current_user) 
      %li >

  .main-box
    .left-box
      .left-box__var
        .left-box__var__mypage
          %ul
            %li
              =link_to "マイページ", user_path(current_user)
            %li
              =link_to "いいね！一覧","#"
            %li
              =link_to "出品する", new_item_path
            %li
              =link_to "出品した商品-出品中","#"
            %li
              =link_to "出品した商品-売却済み","#"
            %li
              =link_to "購入した商品-過去の取引","#"
            %li
              =link_to "お問い合わせ","#"
        .left-box__var__mypage
          %h3 設定
          %ul
            %li
              =link_to "本人情報の変更", edit_user_path(current_user)
            %li
              =link_to "発送元・お届け先住所変更","#"
            %li
              =link_to "支払い方法",card_index_path(current_user)
            %li 
              =link_to "ログアウト", destroy_user_session_path, method: :delete

    .right-box
      .right-box__user
        .right-box__user__icon
          =image_tag ("member_photo_noimage_thumb.png")
          .right-box__user__icon__list
            =link_to current_user.nick_name, user_path(current_user)
          .icon-box
            .icon-box__list
              =link_to "評価"
            .icon-box__list
              =link_to "出品数"

      .right-box__list
        .list-content
          .item-list
            %h2 出品した商品
        
          .item-content
            .pickup-boxs
              .pickup-lists
                -@items.each do |item|
                  .pickup-list
                    = link_to image_tag(item.images[0].image.url, class: "pickup-list--image"), item_path(item.id)
                    .pickup-list--body
                      %h3.name
                      = item.name
                      .details
                        %ul
                          %li
                            = "#{item.price}円"
                          %li
                            = icon('fa','star',class: 'icon')
                            0
                        %p (税込)
                      -if item.buyer_id.present? 
                        .items-box_photo__sold
                          .items-box_photo__sold__inner
                            SOLD
