.new-header
  = link_to root_path do
    = image_tag ("/assets/logo.png"),class:"item-img" 


.new-body
  %section.form-box
    = form_with model:@item,local:true do |f|
      %h2
        商品の情報を入力
      .item__image
        .form-box__form__upload
          %label.form-box__form__upload 出品画像
          %span.required 必須
          %p 最大4枚までアップロードできます
          #image-box-1
            .item-num-0#image-box__container
              = f.fields_for :images do |i|
                .input-area
                  = i.file_field :image, type: 'file', name: "item[images_attributes][][image]", value:"", style: "display:none", id:"img-file"
                  %label{for: "img-file"}
                    = icon('fa','camera')
                    %p ドラックアンドドロップ
                    %p またはクリックしてファイルをアップロード

      .item-main
        %label 商品名
        %span.required 必須
        = f.text_field :name,placeholder: "40文字まで",class:"form"
        .item-main__detail
        %label 商品の説明
        %span.required 必須
        = f.text_area :description,placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。",class:"description-form"
      .item-form
        %h3.sub-head 商品の詳細
        .form-box
          .listing-form-box
            .listing-product-detail__category
              = f.label 'カテゴリー', class: 'listing-default__label'
              %span.required 必須
              .listing-select-wrapper
                .listing-select-wrapper__box
                  = f.select :category_id, @category_parent_array, {}, {class: 'listing-select-wrapper__box--select', id: 'parent_category'}
          .form-box__form
            = f.fields_for :brand do |brand|
              = brand.label "ブランド"
              %span.brand-required 任意
              %div
                = brand.text_field :name, placeholder: "例）シャネル", value: "",class:"form"
          .form-box__form
            %label 商品の状態
            %span.required 必須
            = f.select :condition, ["新品・未使用", "未使用に近い", "目立った傷や汚れなし", "やや傷や汚れあり", "傷や汚れあり", "全体的に状態が悪い"], {prompt: "--"},class:"form"
      .item-form
        %h3.sub-head 配送
        .form-box
          .form-box__form
            %label 配送料の負担 
            %span.required 必須
          = f.select :derivery_charge, [["送料込み（出品者負担）",1],["着払い（購入者負担）",2]], {prompt: "--"},class:"form"
          .form-box__form
            %label 発送元の地域
            %span.required 必須
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name,{prompt: "--"},class:"form"
          .form-box__form
            %label 発送までの日数
            %span.required 必須
          = f.select :days, [["1~2日で発送",1],["3~4日で発送",2],["5~7日で発送",3]], {prompt: "--"},class:"form"
      .item-form
        %h3.sub-head 販売価格(¥300〜9,999,999)
        .price-box
          .price-box__form
            %label 価格
            %span.required 必須
            = f.number_field :price, placeholder: "例）300",class:"form"

      .form-foot
        %p 禁止されている出品、行為を必ずご確認ください。
        またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。また、出品をもちまして加盟店規約に同意したことになります。
      .form-submit
        = f.submit "出品する",class:"item-btn"
      .return-btn
        = link_to  "もどる", root_path,class:"return"
