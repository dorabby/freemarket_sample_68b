.warpper
  = render "shared/header"
  = render "buy-btn"

  .search-result
    .search-list
      .search-side
        .search-side__box

    .search-main
      .search-main__result__box
        - if @search_params.empty?
          .search-main__result__box__title
            %h3.new 新着一覧
          = render "item-search"
        - if @search_params.present? && @count == 0
          .search-main__result__box__title
            %h3 
              =@search_params
              を検索した結果、該当する商品が見つかりませんでした。
          .search-main__result__box__title
            %h3.new 新着一覧
          = render "item-search"
        - if @search_params.present? && @count >= 1 
          .search-main__result__box__title
            %h3 
              =@search_params
              の検索結果
            .search-main__result__box__title__number
              = "検索結果：#{@count}件"
          = render "item-search"


  = render "shared/footer"